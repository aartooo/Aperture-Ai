{
  "kind": "collectionType",
  "collectionName": "author_profiles",
  "info": {
    "singularName": "author-profile",
    "pluralName": "author-profiles",
    "displayName": "Author Profile"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "blocks"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "authorProfile": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "author"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    }
  }
}
